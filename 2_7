#include <windows.h>
#include <fstream>
using namespace std;

int main(int argc, char* argv[])
{
    SetConsoleOutputCP(CP_UTF8);
    ofstream fout("MementoMori.txt");
    fout << "Если долго смотреть на задачник Иродова, то задачник Иродова начнёт смотреть на тебя.";
    fout.close();
    system("pause");
    return 0;
    
